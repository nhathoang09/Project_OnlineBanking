    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="~/User/assets/vendors/animate/animate.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/animate/custom-animate.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/bxslider/jquery.bxslider.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/jquery-magnific-popup/jquery.magnific-popup.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/jquery-ui/jquery-ui.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/nice-select/nice-select.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/odometer/odometer.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/owl-carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/owl-carousel/owl.theme.default.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/swiper/swiper.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/vegas/vegas.min.css" />
    <link rel="stylesheet" href="~/User/assets/vendors/thm-icons/style.css">
    <link rel="stylesheet" href="~/User/assets/vendors/language-switcher/polyglot-language-switcher.css">
    <link rel="stylesheet" href="~/User/assets/vendors/aos/aos.css">
    <!-- Module css -->
    <link rel="stylesheet" href="~/User/assets/css/module-css/01-header-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/02-banner-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/03-about-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/04-fact-counter-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/05-testimonial-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/06-partner-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/07-footer-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/08-blog-section.css">
    <link rel="stylesheet" href="~/User/assets/css/module-css/09-breadcrumb-section.css">

    <!-- Template styles -->
    <link rel="stylesheet" href="~/User/assets/css/style.css" />
    <link rel="stylesheet" href="~/User/assets/css/responsive.css" />

    <link rel="stylesheet" href="~/User/assets/css/register.css">
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form method="post" asp-controller="account" asp-action="register" id="register">
                    <div class="logo-box"> 
                        <img src="~/User/assets/images/resources/logo-1.png" alt="Awesome Logo" title="">
                    </div>

                    <table cellpadding="20px">
                        <tr>
                            <td>
                                <div class="inputbox">
                                    <ion-icon name="person-outline"></ion-icon>
                                    <input type="text" asp-for="Username" id="username" required>
                                    <label for="">Username</label>
                                </div>
                            </td>
                            <td>
                                <div class="inputbox">
                                    <ion-icon name="lock-closed-outline"></ion-icon>
                                    <input type="password" asp-for="Password" required>
                                    <label for="">Password</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="inputbox">
                                    <ion-icon name="pricetag-outline"></ion-icon>
                                    <input type="text" asp-for="FullName" required>
                                    <label for="">FullName</label>
                                </div>
                            </td>
                            <td>
                                <div class="inputbox">
                                    <ion-icon name="calendar-outline"></ion-icon>
                                    <input type="text" id="dob" asp-for="DateOfBirth" asp-format="{dd/MM/yyyy}">
                                    <label for="">Date Of Birth</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="inputbox">
                                    <ion-icon name="mail-outline"></ion-icon>
                                    <input type="text" asp-for="Email" id="email" required>
                                    <label for="">Email</label>
                                </div>
                            </td>
                            <td>
                                <div class="inputbox">
                                    <ion-icon name="call-outline"></ion-icon>
                                    <input type="text" asp-for="PhoneNumber" required>
                                    <label for="">Phone Number</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="inputbox" style="width: 100%">
                                    <ion-icon name="home-outline"></ion-icon>
                                    <input type="text" asp-for="Address">
                                    <label for="">Address</label>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <button type="button" onclick="register()">Register</button>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/User/assets/vendors/jquery/jquery-3.6.0.min.js"></script>
    <script src="~/User/assets/vendors/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/User/assets/vendors/bxslider/jquery.bxslider.min.js"></script>
    <script src="~/User/assets/vendors/circleType/jquery.circleType.js"></script>
    <script src="~/User/assets/vendors/circleType/jquery.lettering.min.js"></script>
    <script src="~/User/assets/vendors/isotope/isotope.js"></script>
    <script src="~/User/assets/vendors/jquery-ajaxchimp/jquery.ajaxchimp.min.js"></script>
    <script src="~/User/assets/vendors/jquery-appear/jquery.appear.min.js"></script>
    <script src="~/User/assets/vendors/jquery-magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/User/assets/vendors/jquery-migrate/jquery-migrate.min.js"></script>
    <script src="~/User/assets/vendors/jquery-ui/jquery-ui.js"></script>
    <script src="~/User/assets/vendors/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/User/assets/vendors/nice-select/jquery.nice-select.min.js"></script>
    <script src="~/User/assets/vendors/odometer/odometer.min.js"></script>
    <script src="~/User/assets/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/User/assets/vendors/swiper/swiper.min.js"></script>
    <script src="~/User/assets/vendors/vegas/vegas.min.js"></script>
    <script src="~/User/assets/vendors/wnumb/wNumb.min.js"></script>
    <script src="~/User/assets/vendors/wow/wow.js"></script>
    <script src="~/User/assets/vendors/extra-scripts/jquery.paroller.min.js"></script>
    <script src="~/User/assets/vendors/language-switcher/jquery.polyglot.language.switcher.js"></script>
    <script src="~/User/assets/vendors/aos/aos.js"></script>

    <!-- Template js -->
    <script src="~/User/assets/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $("#dob").datepicker({
                dateFormat: 'dd/mm/yy'
            });
        });

        function register() {
            var username = $('#username').val();
            var email = $('#email').val();
            $.ajax({
                data: {
                    username: username,
                    email: email
                },
                url: '/ajax/checkRegister',
                success: function (result) {
                    console.log(result);
                    if (result == "Username") {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Username already exists",
                        });
                    } else if (result == "Email") {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Email already exists",
                        });
                    } 
                    else {
                        Swal.fire({
                            title: "Register Success",
                            text: "Automatically closes or Click the button to close",
                            icon: "success"
                        });
                        $("#register").submit();
                    }
                }
            });
        }
    </script>
</body>
</html>